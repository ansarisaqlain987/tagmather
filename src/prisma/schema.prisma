generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Envelope {
  id          Int     @id
  name        String
  description String?
  user        String
  createdAt   String
  updatedAt   String

  transactions Transactions[]

  @@map("envelopes")
}

model Transactions {
  id          Int     @id
  type        TransactionType
  amount      Decimal
  description String?
  user        String
  createdAt   String
  updatedAt   String
  envelopeId Int

  envelope   Envelope @relation(fields: [envelopeId], references: [id])

  @@map("transactions")
}

enum TransactionType {
  CREDIT
  DEBIT
}
